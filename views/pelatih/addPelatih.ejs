<!-- Modal -->
<form action="/pelatih/save" method="POST" enctype="multipart/form-data">
    <div class="modal fade" id="addPelatih" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Add Pelatih</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="form-group col-md mb-3">
                            <label for="nama" class="form-label">Nama</label>
                            <input type="text" class="form-control" id="nama" name="nama"  >
                        </div>
                        <div class="form-group col-md mb-3">
                            <label for="tempat_lahir" class="form-label">Tempat Lahir</label>
                            <input type="text" class="form-control" id="tempat_lahir" name="tempat_lahir"  >
                        </div>
                        <div class="form-group col-md mb-3">
                            <label for="tanggal_lahir" class="form-label">Tanggal Lahir</label>
                            <input type="date" class="form-control" id="tanggal_lahir" name="tanggal_lahir"  >
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md mb-3">
                            <label for="jenis_kelamin" class="form-label">Jenis Kelamin</label>
                            <select type="text" class="form-select" id="jenis_kelamin" name="jenis_kelamin"  >
                                <option selected>Jenis Kelamin</option>
                                <option value="Laki-laki">Laki-laki</option>
                                <option value="Perempuan">Perempuan</option>
                            </select>
                        </div>
                        <div class="form-group col-md mb-3">
                            <label for="no_telp" class="form-label">No Telp</label>
                            <input type="text" class="form-control" id="no_telp" name="no_telp"  >
                        </div>
                        <div class="form-group col-md mb-3">
                            <label for="nik" class="form-label">NIK</label>
                            <input type="text" class="form-control" id="nik" name="nik"  >
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md mb-3">
                            <label for="alamat" class="form-label">Alamat</label>
                            <div class="form-floating">
                                <textarea type="text" class="form-control" id="alamat" name="alamat"  ></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md mb-3">
                            <label for="tahun_mulai" class="form-label">Tahun Mulai</label>
                            <input type="text" class="form-control" id="tahun_mulai" name="tahun_mulai"  >
                        </div>
                        <div class="form-group col-md mb-3">
                            <label for="cabor" class="form-label">Cabor</label>
                            <select class="form-select" id="cabor" name="cabor"  >
                                <option selected>Cabang Olah Raga</option>
                                <% cabor.forEach(function(cabor){ %>
                                    <option value="<%= cabor.nama %>"><%= cabor.nama %></option>
                                <%});%>
                            </select>
                        </div>
                        <div class="form-group col-md mb-3">
                            <label for="fotoPelatih" class="form-label">Foto</label>
                            <input type="file" class="form-control" id="fotoPelatih" name="fotoPelatih"  >
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </div>
</form>