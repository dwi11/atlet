<!-- Modal -->
<form action="/pelatih/edit" method="POST" enctype="multipart/form-data">
    <div class="modal fade" id="editPelatih" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Edit Pelatih</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                     <input type="submit" name="id_atlet" class="product_id2" value="<%= pelatih.id_pelatih %>">
                    <%= pelatih.id_pelatih %>
                    <div class="row">
                        <div class="form-group col-md mb-3">
                            <label for="nama" class="form-label">Nama</label>
                            <input type="text" class="form-control nama" id="nama" name="nama"  >
                        </div>
                        <div class="form-group col-md mb-3">
                            <label for="tempat_lahir" class="form-label">Tempat Lahir</label>
                            <input type="text" class="form-control tempat_lahir" id="tempat_lahir" name="tempat_lahir"  >
                        </div>
                        <div class="form-group col-md mb-3">
                            <label for="tanggal_lahir" class="form-label">Tanggal Lahir</label>
                            <input type="date" class="form-control tanggal_lahir" id="tanggal_lahir" name="tanggal_lahir"  >
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md mb-3">
                            <label for="jenis_kelamin" class="form-label">Jenis Kelamin</label>
                            <select type="text" class="form-select jenis_kelamin" id="jenis_kelamin" name="jenis_kelamin"  >
                                <option selected>Jenis Kelamin</option>
                                <option value="Laki-laki">Laki-laki</option>
                                <option value="Perempuan">Perempuan</option>
                            </select>
                        </div>
                        <div class="form-group col-md mb-3">
                            <label for="no_telp" class="form-label">No Telp</label>
                            <input type="text" class="form-control" id="no_telp" name="no_telp"  >
                        </div>
                        <div class="form-group col-md mb-3">
                            <label for="nik" class="form-label">NIK</label>
                            <input type="text" class="form-control" id="nik" name="nik"  >
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md mb-3">
                            <label for="alamat" class="form-label">Alamat</label>
                                <textarea type="text" class="form-control" id="alamat" name="alamat"  ></textarea>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md mb-3">
                            <label for="tahun_mulai" class="form-label">Tahun Mulai</label>
                            <input type="text" class="form-control tahun_mulai" id="tahun_mulai" name="tahun_mulai"  >
                        </div>
                        <div class="form-group col-md mb-3">
                            <label for="cabor" class="form-label">Cabor</label>
                            <select class="form-select cabor" id="cabor" name="cabor"  >
                                <option selected>Cabang Olah Raga</option>
                                <% cabor.forEach(function(item) { %>
                                    <option value="<%= item.nama; %>"><%= item.nama; %></option>
                                </select>
                                <% }); %>
                        </div>
                        <div class="form-group col-md mb-3">
                            <label for="fotoPelatih" class="form-label">Foto</label>
                            <input type="file" class="form-control fotoPelatih" id="fotoPelatih" name="fotoPelatih"  >
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" name="id_pelatih" class="form-control product_id2" required />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-success id_pelatih" name="id_pelatih">Edit</button>
                </div>
            </div>
        </div>
    </div>
</form>